<?xml version="1.0" encoding="UTF-8"?>
<layout version="1.0.0">
    <default>
        <reference name="head">
            <block type="core/template" name="otimizar_facebookpixel_header" template="otimizar/facebookpixel/header.phtml"/>
        </reference>
    </default>
    <checkout_cart_index>
        <reference name="after_body_start">
            <block type="core/template" name="otimizar_facebookpixel_cart" template="otimizar/facebookpixel/cart/add.phtml" />
        </reference>
    </checkout_cart_index>
    <catalog_product_view>
        <reference name="content">
            <block type="core/template" name="otimizar_facebookpixel_productview" template="otimizar/facebookpixel/product/view.phtml" />
        </reference>
    </catalog_product_view>
    <checkout_onepage_success translate="label">
        <reference name="content">
            <block type="core/template" name="otimizar_facebookpixel_purchase" template="otimizar/facebookpixel/checkout/purchase.phtml"/>
        </reference>
    </checkout_onepage_success>
</layout>