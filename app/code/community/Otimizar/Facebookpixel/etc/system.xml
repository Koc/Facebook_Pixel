<?xml version="1.0"?>
    <config>
        <tabs>
            <otimizar translate="label" module="otimizar_facebookpixel">
                <label>otimizar</label>
                <sort_order>10</sort_order>
            </otimizar>
        </tabs>
        <sections>
            <otimizar_facebookpixel>
                <label>Facebook Pixel</label>
                <tab>otimizar</tab>
                <sort_order>300</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <groups>
                    <general>
                        <label>General</label>
                        <sort_order>0</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <fields>
                            <enable>
                                <label>Enable</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>0</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable>
                            <fbq_code>
                                <label>Init Code - PIXEL ID</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </fbq_code>
                            <fbq_checker>
                                <label>Checker code</label>
                                <frontend_type>textarea</frontend_type>
                                <sort_order>100</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <comment>executed before event, prevents plugin load error</comment>
                            </fbq_checker>
                        </fields>
                    </general>
                    <product>
                        <label>Product</label>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <fields>
                            <enable_on_product_view>
                                <label>Enable on product view</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>0</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_on_product_view>
                            <view_code>
                                <label>Code for product view</label>
                                <frontend_type>textarea</frontend_type>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </view_code>
                        </fields>
                    </product>
                    <checkout>
                        <label>Checkout</label>
                        <sort_order>1</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <fields>
                            <enable_on_purchase>
                                <label>Enable Purchase Event</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>0</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_on_purchase>
                            <purchase>
                                <label>Code for Checkout Success</label>
                                <frontend_type>textarea</frontend_type>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </purchase>
                        </fields>
                    </checkout>
                    <events>
                        <label>Events</label>
                        <sort_order>10</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <fields>
                            <add_to_cart>
                                <label>Enable AddToCart</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                                <comment><![CDATA["fbq('track', 'AddToCart');"]]></comment>
                            </add_to_cart>
                        </fields>
                    </events>
                </groups>
            </otimizar_facebookpixel>
        </sections>
    </config>
